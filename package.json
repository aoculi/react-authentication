{
  "name": "react-authentication",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:eslint": "tsc --noEmit -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",
    "lint": "npm run build:eslint && npm run lint:post-build",
    "lint:post-build": "eslint --ext tsx --ext ts src",
    "lint:fix": "eslint src --fix",
    "test:format": "npm run prettier --check",
    "prettier:fix": "prettier --config .prettierrc --write \"**/*.{js,ts,tsx,css}\"",
    "release": "np"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aoculi/react-authentication.git"
  },
  "devDependencies": {
    "@types/eslint": "^8.44.9",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.17",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jwt-decode": "^4.0.0",
    "np": "^9.2.0",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "tslib": "^2.6.2",
    "typescript": "<=5.2.0"
  },
  "peerDependencies": {
    "react": ">=16"
  }
}
